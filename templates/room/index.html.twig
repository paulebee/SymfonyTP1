{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1 class="text-2xl text-center mt-10">Room index</h1>

    <table class="table w-3/4 text-sm text-left text-gray-500 dark:text-gray-400 mt-4 mx-auto">
        <thead class="text-l text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"> 
            <tr>
                <th class="px-6 py-3">Id</th>
                <th class="px-6 py-3">Name</th>
                <th class="px-6 py-3">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr class="bg-white border-b dark:bg-white-900 dark:border-gray-700 text-black">
                <td class="px-6 py-4">{{ room.id }}</td>
                <td class="px-6 py-4">{{ room.name }}</td>
                <td class="px-6 py-4 font-bold">
                    <a href="{{ path('app_room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr class="px-6 py-4">
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <div class="flex justify-center mt-5 font-bold">
        <a href="{{ path('app_room_new') }}">Create new</a>
    </div>
{% endblock %}
